// Niri Configuration - Ported from Hyprland config
// Save this as ~/.config/niri/config.kdl

input {
    keyboard {
        xkb {
            layout "us"
        }
        repeat-delay 600
        repeat-rate 25
    }
    
    touchpad {
        tap
        dwt
        natural-scroll
        accel-speed 0.2
    }
    
    mouse {
        accel-speed 0.0
        accel-profile "flat"
    }
    
}

output "eDP-1" {
    mode "1920x1080@60"
    scale 1.0
    position x=0 y=0
}

layout {
    // Gaps similar to Hyprland config (5px inside, 10px outside)
    gaps 6
    
    center-focused-column "never"
    
    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }
    
    default-column-width { proportion 1.0; }
    
    focus-ring {
        width 1
        active-color "#b4befe" // Lavender accent
        inactive-color "#45475a" // Gray

        // Gradient effect
        active-gradient from="#b4befe" to="#89b4fa" angle=45 relative-to="workspace-view"
    }
    
    border {
        width 1.5
        active-color "#b4befe" // Lavender
        inactive-color "#45475a" // Gray
        
        // Gradient for active border
        active-gradient from="#b4befe" to="#89b4fa" angle=45 relative-to="workspace-view"
    }
    
    struts {
        left 0
        right 0
        top 0
        bottom 0
    }
}

// Set the overview wallpaper on the backdrop.
layer-rule {
  match namespace="^noctalia-overview*"
  place-within-backdrop true
}

window-rule {
    match app-id="guifetch"
    default-column-width {}
    open-floating true
}

window-rule {
    match app-id="yad"
    open-floating true
}

window-rule {
    match app-id="zenity"
    open-floating true
}

window-rule {
    match app-id="wev"
    open-floating true
}

window-rule {
    match app-id="org.gnome.FileRoller"
    open-floating true
}

window-rule {
    match app-id="file-roller"
    open-floating true
}

window-rule {
    match app-id="system-config-printer"
    open-floating true
}

window-rule {
    match app-id="org.pulseaudio.pavucontrol"
    default-column-width { proportion 1.0; }
    open-floating true
}

window-rule {
    match app-id="yad-icon-browser"
    default-column-width { proportion 1.0; }
    open-floating true
}

window-rule {
    match app-id="nwg-look"
    default-column-width { proportion 1.0; }
    open-floating true
}

window-rule {
    match app-id="com.github.wwmm.easyeffects"
    default-column-width { proportion 0.5; }
    default-window-height { fixed 600; }
    open-floating true
}

window-rule {
    match title="^(Select|Open)( a)? (File|Folder)(s)?$"
    open-floating true
}

window-rule {
    match title="^File (Operation|Upload)( Progress)?$"
    open-floating true
}

window-rule {
    match title="Properties$"
    open-floating true
}

window-rule {
    match title="^Export Image as PNG$"
    open-floating true
}

window-rule {
    match title="^GIMP Crash Debug$"
    open-floating true
}

window-rule {
    match title="^Save As$"
    open-floating true
}

window-rule {
    match title="^Library$"
    open-floating true
}

window-rule {
    match app-id="^brave-browser$"
    default-column-width { proportion 1.0; }
}

window-rule {
    match app-id="^org.vinegarhq.Sober$"
    default-column-width { proportion 1.0; }
}

window-rule {
    match app-id="^kitty$"
    default-column-width { proportion 1.0; }
}

// Floating windows (Niri handles this differently)
window-rule {
    match app-id="^(blueberry.py|nm-connection-editor)$"
    default-column-width { fixed 800; }
}

// Cursor configuration
window-rule {
  geometry-corner-radius 5
  clip-to-geometry true
}

// Animation settings (similar to Hyprland's bezier curves)
animations {
    //slowdown 1.0
    
    window-open {
        duration-ms 150
        curve "ease-out-expo"
    }
    
    window-close {
        duration-ms 150
        curve "ease-out-quad"
    }
    
